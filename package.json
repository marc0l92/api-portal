{
  "name": "api-tools",
  "description": "Set of tools to perform API transformation and analysis",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "author": "marc0l92",
  "keywords": [
    "Swagger",
    "OpenAPI",
    "API"
  ],
  "scripts": {
    "dev": "node src/cli/esbuild.config.mjs --configFile=config/config.dev.yaml",
    "dev:generate": "pnpm run build && node dist/api-portal-cli.js --configFile=config/config.dev.yaml",
    "generate": "node dist/api-portal-cli.js",
    "test": "jest --silent=false",
    "build": "tsc -noEmit -skipLibCheck && node src/cli/esbuild.config.mjs production",
    "config-schema": "typescript-json-schema --required src/cli/buildConfig.ts BuildConfig > dist/buildConfig.schema.json && typescript-json-schema --required src/cli/servicesTags.ts ServicesTags > dist/servicesTags.schema.json"
  },
  "dependencies": {
    "fflate": "^0.7.4",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "plantuml-encoder": "^1.4.0",
    "pluralize": "^8.0.0",
    "swagger-ui": "^4.18.2",
    "swagger-ui-flat-model-plugin": "^0.3.0",
    "util": "^0.12.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@stoplight/spectral-cli": "^6.6.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.15.11",
    "@types/object-hash": "^3.0.2",
    "@types/plantuml-encoder": "^1.4.0",
    "@types/swagger-ui": "^3.52.0",
    "@types/yargs": "^17.0.24",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.17.14",
    "esbuild-svelte": "^0.7.3",
    "fs-extra": "^11.1.1",
    "glob": "^9.3.2",
    "jest": "^29.5.0",
    "object-hash": "^3.0.0",
    "sass": "^1.60.0",
    "svelte": "^3.58.0",
    "svelte-preprocess": "^5.0.3",
    "svelte-preprocess-sass": "^2.0.1",
    "ts-jest": "^29.0.5",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "typescript-json-schema": "^0.55.0",
    "yargs": "^17.7.1"
  }
}